<Window x:Class="CYKWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CYKWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded" MinWidth="525" MinHeight="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="0" Grid.Column="0">
            <Grid  ShowGridLines="True" Name="MyGrid" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"  />
        </DockPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" >
            <TextBox Name="MyText" Text="baaba"></TextBox>
            <Button DockPanel.Dock="Top" Name="StepButton" Click="Button_Click" Content="Step"  VerticalAlignment="Top"/>
            <TreeView  Name="MyTree" Height="298" />
        </StackPanel>
    </Grid>
</Window>
